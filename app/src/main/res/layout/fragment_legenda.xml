<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="12dp"
    tools:context=".view.dialogs.LegendaFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legendas"
        android:fontFamily="@font/santral_bold"
        android:textColor="@color/black"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status do pedido no ERP"
        android:fontFamily="@font/santral_bold"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/icone_em_processamento"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/em_processo"
            android:foreground="@drawable/ic_maxima_em_processamento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Em processamento por parte do FV"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/icone_em_processamento"
            app:layout_constraintTop_toTopOf="@id/icone_em_processamento"
            app:layout_constraintBottom_toBottomOf="@id/icone_em_processamento"/>

        <TextView
            android:id="@+id/icone_recusado"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/recusado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="!"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_em_processamento"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Pedido recusado pelo ERP"
            app:layout_constraintStart_toEndOf="@id/icone_recusado"
            app:layout_constraintTop_toTopOf="@id/icone_recusado"
            app:layout_constraintBottom_toBottomOf="@id/icone_recusado"/>

        <TextView
            android:id="@+id/icone_pendente"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pendente"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="P"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_recusado"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Posição no ERP Pendente"
            app:layout_constraintStart_toEndOf="@id/icone_pendente"
            app:layout_constraintTop_toTopOf="@id/icone_pendente"
            app:layout_constraintBottom_toBottomOf="@id/icone_pendente"/>

        <TextView
            android:id="@+id/icone_bloqueado"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bloqueado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="B"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_pendente"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Posição no ERP Bloqueado"
            app:layout_constraintStart_toEndOf="@id/icone_bloqueado"
            app:layout_constraintTop_toTopOf="@id/icone_bloqueado"
            app:layout_constraintBottom_toBottomOf="@id/icone_bloqueado"/>

        <TextView
            android:id="@+id/icone_liberado"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/liberado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="L"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_bloqueado"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Posição no ERP Liberado"
            app:layout_constraintStart_toEndOf="@id/icone_liberado"
            app:layout_constraintTop_toTopOf="@id/icone_liberado"
            app:layout_constraintBottom_toBottomOf="@id/icone_liberado"/>

        <TextView
            android:id="@+id/icone_montado"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/montado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="M"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_liberado"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Posição no ERP Montado"
            app:layout_constraintStart_toEndOf="@id/icone_montado"
            app:layout_constraintTop_toTopOf="@id/icone_montado"
            app:layout_constraintBottom_toBottomOf="@id/icone_montado"/>

        <TextView
            android:id="@+id/icone_faturado"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/faturado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="F"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_montado"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Posição no ERP Faturado"
            app:layout_constraintStart_toEndOf="@id/icone_faturado"
            app:layout_constraintTop_toTopOf="@id/icone_faturado"
            app:layout_constraintBottom_toBottomOf="@id/icone_faturado"/>

        <TextView
            android:id="@+id/icone_cancelado"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/cancelado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="C"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_faturado"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Posição no ERP Cancelado"
            app:layout_constraintStart_toEndOf="@id/icone_cancelado"
            app:layout_constraintTop_toTopOf="@id/icone_cancelado"
            app:layout_constraintBottom_toBottomOf="@id/icone_cancelado"/>

        <TextView
            android:id="@+id/icone_orcamento"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/orcado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="O"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icone_cancelado"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Posição no ERP Liberado"
            app:layout_constraintStart_toEndOf="@id/icone_orcamento"
            app:layout_constraintTop_toTopOf="@id/icone_orcamento"
            app:layout_constraintBottom_toBottomOf="@id/icone_orcamento"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crítica"
        android:fontFamily="@font/santral_bold"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/icone_aguardando"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_maxima_aguardando_critica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Aguardando retorno do ERP"
            app:layout_constraintStart_toEndOf="@id/icone_aguardando"
            app:layout_constraintTop_toTopOf="@id/icone_aguardando"
            app:layout_constraintBottom_toBottomOf="@id/icone_aguardando"/>

        <ImageView
            android:id="@+id/icone_sucesso"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_maxima_critica_sucesso"
            app:layout_constraintStart_toStartOf="@id/icone_aguardando"
            app:layout_constraintTop_toBottomOf="@id/icone_aguardando"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Sucesso"
            app:layout_constraintStart_toEndOf="@id/icone_sucesso"
            app:layout_constraintTop_toTopOf="@id/icone_sucesso"
            app:layout_constraintBottom_toBottomOf="@id/icone_sucesso"/>

        <ImageView
            android:id="@+id/icone_falha_parcial"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_maxima_critica_alerta"
            app:layout_constraintStart_toStartOf="@id/icone_sucesso"
            app:layout_constraintTop_toBottomOf="@id/icone_sucesso"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Falha parcial"
            app:layout_constraintStart_toEndOf="@id/icone_falha_parcial"
            app:layout_constraintTop_toTopOf="@id/icone_falha_parcial"
            app:layout_constraintBottom_toBottomOf="@id/icone_falha_parcial"/>

        <TextView
            android:id="@+id/icone_falha_total"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/cancelado"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:text="!"
            app:layout_constraintStart_toStartOf="@id/icone_falha_parcial"
            app:layout_constraintTop_toBottomOf="@id/icone_falha_parcial"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Falha total"
            app:layout_constraintStart_toEndOf="@id/icone_falha_total"
            app:layout_constraintTop_toTopOf="@id/icone_falha_total"
            app:layout_constraintBottom_toBottomOf="@id/icone_falha_total"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legendas"
        android:fontFamily="@font/santral_bold"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/icone_corte"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_maxima_legenda_corte"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Pedido sofreu corte"
            app:layout_constraintStart_toEndOf="@id/icone_corte"
            app:layout_constraintTop_toTopOf="@id/icone_corte"
            app:layout_constraintBottom_toBottomOf="@id/icone_corte"/>

        <ImageView
            android:id="@+id/icone_falta"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_maxima_legenda_falta"
            app:layout_constraintStart_toStartOf="@id/icone_corte"
            app:layout_constraintTop_toBottomOf="@id/icone_corte"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Pedido com falta"
            app:layout_constraintStart_toEndOf="@id/icone_falta"
            app:layout_constraintTop_toTopOf="@id/icone_falta"
            app:layout_constraintBottom_toBottomOf="@id/icone_falta"/>

        <ImageView
            android:id="@+id/icone_cancelado_ERP"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_maxima_legenda_cancelamento"
            app:layout_constraintStart_toStartOf="@id/icone_falta"
            app:layout_constraintTop_toBottomOf="@id/icone_falta"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Pedido cancelado no ERP"
            app:layout_constraintStart_toEndOf="@id/icone_cancelado_ERP"
            app:layout_constraintTop_toTopOf="@id/icone_cancelado_ERP"
            app:layout_constraintBottom_toBottomOf="@id/icone_cancelado_ERP"/>

        <ImageView
            android:id="@+id/icone_devolucao"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_maxima_legenda_devolucao"
            app:layout_constraintStart_toStartOf="@id/icone_cancelado_ERP"
            app:layout_constraintTop_toBottomOf="@id/icone_cancelado_ERP"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Pedido com devolução"
            app:layout_constraintStart_toEndOf="@id/icone_devolucao"
            app:layout_constraintTop_toTopOf="@id/icone_devolucao"
            app:layout_constraintBottom_toBottomOf="@id/icone_devolucao"/>

        <ImageView
            android:id="@+id/icone_telemarketing"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_maxima_legenda_telemarketing"
            app:layout_constraintStart_toStartOf="@id/icone_devolucao"
            app:layout_constraintTop_toBottomOf="@id/icone_devolucao"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/santral_bold"
            android:textColor="@color/black"
            android:text="Pedido feito pelo Telemarketing"
            app:layout_constraintStart_toEndOf="@id/icone_telemarketing"
            app:layout_constraintTop_toTopOf="@id/icone_telemarketing"
            app:layout_constraintBottom_toBottomOf="@id/icone_telemarketing"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/botao_fechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:text="FECHAR"
        android:layout_gravity="end"
        android:textColor="@color/botao_verificar_status_color"/>



</LinearLayout>